								<button type="button" class="btn blue">Save changes</button>
								<button type="button" class="btn default" data-dismiss="modal">Close</button>
							</div>
						</div>
						<!-- /.modal-content -->
					</div>
					<!-- /.modal-dialog -->
				</div>
				<!-- /.modal -->
				<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->

				<!-- BEGIN PAGE HEADER-->
				<h3 class="page-title">
					Новый Город
				</h3>
				<div class="page-bar">
					<ul class="page-breadcrumb">
						<li>

							<%= link_to root_path do  %>
	        		<%= content_tag :i, "", :class => "fa fa-home" %>Панель Управления
							<%= content_tag :i, "", :class => "fa fa-angle-right" %>
	      			<% end %>
						</li>
						<li>
							<%= link_to '/cities' do  %>
							<%= content_tag :i, "" %>Города
							<%= content_tag :i, "", :class => "fa fa-angle-right" %>
							<% end %>
						</li>
						<li>
							<a href="#">Новый Город</a>
						</li>
					</ul>
				</div>
				<!-- END PAGE HEADER-->
				<!-- BEGIN PAGE CONTENT-->
				<div class="row">
					<div class="col-md-12">


										<div class="portlet light">
													<div class="portlet-title">
														<div class="caption font-red-sunglo">
															<span class="caption-subject bold uppercase"> Управление Данными</span>

														</div>
													</div>

                          <%= form_for(:bank_account, :url => {:action => 'create', :id => @contragent.id }, :html => {:multipart => true}) do |f| %>
															<div class="form-body">

                                  <!-- <%= @contragent.id %> -->

															<%= f.text_field :contragent_id, :value => @contragent.id, :type => 'hidden' %>

                              <div class="form-group form-md-line-input has-success">
                                <%= f.text_field :bank_account, class: 'form-control', id: 'form-control_1', placeholder: 'Введите наименование города', :maxlength=>35 %>
                                <%= f.label :bank_account, "Bank Account Number", for: 'form-control_1' %>
                                <div class="form-control-focus">
                                </div>
                              </div>

                              <div class="form-group form-md-line-input has-success">
																<%= f.select :bank_id, @banks.map {|b| [b.bank_name, b.id]}, {}, { class: 'form-control', id: 'form-control_1' } %>
																<%= f.label :bank_id, "COR", for: 'form-control_1' %>
																<div class="form-control-focus">
																</div>
															</div>

															<%= f.submit "Сохранить Запись", class: "btn btn-primary btn-right" %>
														</form>

														<% end %>


													</div>


												</div>

					</div>
				</div>
