<!-- BEGIN CONTENT -->
		<div class="page-content-wrapper">
			<div class="page-content">
				<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
				<div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
								<h4 class="modal-title">Modal title</h4>
							</div>
							<div class="modal-body">
								 Widget settings form goes here
							</div>
							<div class="modal-footer">
								<button type="button" class="btn blue">Save changes</button>
								<button type="button" class="btn default" data-dismiss="modal">Close</button>
							</div>
						</div>
						<!-- /.modal-content -->
					</div>
					<!-- /.modal-dialog -->
				</div>
				<!-- /.modal -->
				<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->

				<!-- BEGIN PAGE HEADER-->
				<h3 class="page-title">
					Список городов <small>Все города в базе данных</small>
				</h3>
				<div class="page-bar">
					<ul class="page-breadcrumb">
						<li>
							<%= link_to root_path do  %>
	        		<%= content_tag :i, "", :class => "fa fa-home" %>Панель Управления
							<%= content_tag :i, "", :class => "fa fa-angle-right" %>
	      			<% end %>
						</li>
						<li>
							<%= link_to '/cities' do  %>
	        		<%= content_tag :i, "" %>Города
							<%= content_tag :i, "", :class => "fa fa-angle-right" %>
	      			<% end %>
						</li>

						<li>
							<a href="#" class="active">Все Города</a>
						</li>
					</ul>
				</div>
				<!-- END PAGE HEADER-->
				<!-- BEGIN PAGE CONTENT-->
				<div class="row">
					<div class="col-md-12">



						<!-- BEGIN SAMPLE TABLE PORTLET-->
						<div class="portlet light">
							<div class="portlet-title">
								<div class="caption">
									<i class="fa fa-building"></i> Все Города
								</div>
								<div class="tools">
									<a href="javascript:;" class="collapse" data-original-title="" title="Расскрыть/Свернуть">
									</a>
									<a href="#portlet-config" data-toggle="modal" class="config" data-original-title="" title="Настройки">
									</a>
									<a href="javascript:;" class="reload" data-original-title="" title="Обновить">
									</a>
									<a href="javascript:;" class="remove" data-original-title="" title="Закрыть">
									</a>
								</div>
							</div>
							<div class="portlet-body" style="display: block;">
								<div class="table-scrollable">
									<table class="table table-striped table-bordered table-advance table-hover">
									<thead>
									<tr>
										<th style="width: 250px; font-size: 15px;">
											<i class="fa fa-database"></i> Регистрационный Номер
										</th>
										<th style="font-size: 15px;">
											<i class="fa fa-building"></i> Наименование
										</th>
										<th style="width: 55px;">
										</th>
										<th style="width: 55px;">
										</th>
									</tr>
									</thead>
									<% @cities.each do |city| %>
									<tbody>
									<tr>
										<td class="highlight" style="vertical-align: middle; font-size: 14px; ">
											<div class="success">
											</div>
											<a href="javascript:;">
											<%= city.city_reg_no %> </a>
										</td>
										<td style="vertical-align: middle; font-size: 14px; ">
											<%= city.city_name %>
										</td>
										<td>
											<a href="javascript:;" class="btn btn-icon-only blue">
												<i class="fa fa-edit"></i>
											</a>
										</td>
										<td>
											<a href="javascript:;" class="btn btn-icon-only red">
																<i class="fa fa-remove"></i>
																</a>


										</td>
									</tr>

									</tbody>
									<% end %>
									</table>
								</div>
								<div class="apple_pagination">
									<%= will_paginate @cities, :previous_label => 'Назад', :next_label => 'Вперед' %>
								</div>
							</div>
						</div>
						<!-- END SAMPLE TABLE PORTLET-->




					</div>
				</div>
				<!-- END PAGE CONTENT-->
			</div>
		</div>
		<!-- END CONTENT -->
  </div>
