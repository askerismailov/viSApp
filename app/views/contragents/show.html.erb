				<!-- BEGIN PAGE CONTENT-->
				<!-- BEGIN PAGE CONTENT-->
				<div class="row">
					<div class="col-md-12">

						<!-- BEGIN SAMPLE TABLE PORTLET-->
						<div class="portlet light">
							<div class="portlet-title">
								<div class="caption">
									<i class="fa fa-user"></i> <%= @contragent.cont_name %>
								</div>
								<div class="tools">
									<a href="javascript:;" class="collapse" data-original-title="" title="Расскрыть/Свернуть">
									</a>
									<a href="#portlet-config" data-toggle="modal" class="config" data-original-title="" title="Настройки">
									</a>
									<a href="javascript:;" class="reload" data-original-title="" title="Обновить">
									</a>
									<a href="javascript:;" class="remove" data-original-title="" title="Закрыть">
									</a>
								</div>
							</div>

							<div class="portlet-body" style="display: block;">


		<td>
				<%= link_to("Attach bank account", {:controller => 'bank_accounts', :action => 'new', :id => @contragent.id },
																				:class => "btn btn-success fa fa-add") %>
		</td><br/><br/>


<% if @contragent.bank_accounts.size > 0 %>

								<div class="table-scrollable">
									<table class="table table-striped table-bordered table-advance table-hover">
									<thead>
									<tr>
										<th style="font-size: 15px;">
											<i class="fa fa-building"></i> Bank Account
										</th>

										<th style="font-size: 15px;">
											<i class="fa fa-building"></i> Bank
										</th>

										<th style="font-size: 15px;">
											<i class="fa fa-building"></i> Bank MFO
										</th>

										<th style="width: 55px;">
										</th>
										<th style="width: 55px;">
										</th>
									</tr>
									</thead>
									<% @bank_accounts.each do |ba| %>
									<tbody>
									<tr>

										<td style="vertical-align: middle; font-size: 14px; ">
											<%= ba.bank_account %>
										</td>
										<td style="vertical-align: middle; font-size: 14px; ">
											<%= ba.bank.bank_name if ba.bank %>
										</td>
										<td style="vertical-align: middle; font-size: 14px; ">
											<%= ba.bank.mfo_no if ba.bank %>
										</td>


<td>
										<%= link_to("", {:controller => 'bank_accounts', :action => 'edit', :id => ba.id },
																		 :class => "btn btn-icon-only blue fa fa-edit") %>

</td>


<td>
										<%= link_to("", {:controller => 'bank_accounts', :action => 'delete', :id => ba.id },
																		 :class => "btn btn-icon-only red fa fa-remove") %>

</td>

									</tr>
									</tbody>
									<% end %>
									</table>
								</div>
								<% else %>


									<h4>There are no accounts associated with <%= @contragent.cont_name %>.</h4>

								<% end %>





									<!-- END SAMPLE TABLE PORTLET-->
